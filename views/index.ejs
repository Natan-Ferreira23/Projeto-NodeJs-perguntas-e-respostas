<%- include("./partials/header.ejs")%>


    <body>
        <%- include("./partials/navbar.ejs")%>
            <div class="container">
                <h1 class="border-bottom">Perguntas</h1>
                <a href="/perguntar" class="btn btn-primary">Perguntar</a>
                <%perguntas.forEach(pergunta=>{%>
                    <div class="mt-3 border-top">
                        <div class="card">
                            <div class="card-body">
                                <h3>
                                    <%= pergunta.titulo %>
                                </h3>
                            </div>
                            <div class="card-footer">
                                <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-primary">Responder</button>
                                </a>
                            </div>
                        </div>
                    </div>
                    <%})%>
            </div>
    </body>
    <%- include("./partials/footer.ejs")%><%- include("./partials/footer.ejs")%>