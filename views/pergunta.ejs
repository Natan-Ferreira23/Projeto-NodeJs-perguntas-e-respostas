<%- include("./partials/header.ejs")%>
    <%- include("./partials/navbar.ejs")%>

        <body>
            <div class="container">
                <div class="border p-2">
                    <h1>
                        <%=pergunta.titulo%>
                    </h1>
                    <p>
                        <%=pergunta.descricao %>
                    </p>
                    <form action="/responder" method="post">
                        <h4>Responda</h4>
                        <div class="mb-3">
                            <label for="corpo">Responder</label>
                            <textarea name="corpo" id="corpo" placeholder="Digite sua resposta" class="form-control"
                                required></textarea>
                        </div>
                        <div class="mb-3">
                            <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
                        </div>
                        <div class="mb-3">
                            <input type="submit" value="Responder" class="btn btn-success">
                        </div>
                    </form>
                    <h3 class="m-3 border-bottom">Respostas</h3>
                    <% respostas.forEach((resposta)=>{ %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <p>
                                    <%= resposta.corpo %>
                                </p>
                            </div>
                        </div>

                        <% })%>
                </div>
            </div>
        </body>
        <%- include("./partials/footer.ejs")%>